<div>
  logged as <%= current_user.email %> (<%= link_to "Log out", destroy_user_session_path, method: :delete  %>)
</div>

<section id="todoapp">


  <header id="header">
    <h1>todos</h1>
    <%= form_for(Todo.new, remote: true) do |f| %>
      <%= f.text_field :content, placeholder: "content", id: "new-todo", autofocus: true, "data-behavior" => "create_todo" %>
    <% end %>
  </header>


  <section id="main">
    <ul id="todo-list" data-behavior="sort_todo" data-update-url="<%= sort_todos_url %>">
      <%= render @todos %>
    </ul>
  </section>

</section>
